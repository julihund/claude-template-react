{
  "mcpServers": {
    "playwright": {
      "command": "npx",
      "args": ["-y", "@playwright/mcp-server"],
      "description": "E2E testing, visual regression, screenshot reviews"
    },
    "github": {
      "command": "docker",
      "args": ["run", "-i", "--rm", "-e", "GITHUB_PERSONAL_ACCESS_TOKEN", "ghcr.io/github/github-mcp-server"],
      "description": "GitHub operations (requires GITHUB_PERSONAL_ACCESS_TOKEN env var)"
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "description": "Up-to-date documentation for 20,000+ libraries (use 'use context7' in prompts)"
    },
    "sqlite": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite", "app.db"],
      "description": "Database inspection during development"
    },
    "filesystem": {
      "command": "npx",
      "args": ["-y", "@modelcontextprotocol/server-filesystem", "."],
      "description": "File operations and workspace management"
    }
  },
  "allowedTools": [
   "Bash(*)",
    "Edit(*)",
    "Write(*)",
    "Read(C:\\Users\\jhund\\Desktop\\software\\julian\\**)",
    "Glob(C:\\Users\\jhund\\Desktop\\software\\julian\\**)",
    "Grep(C:\\Users\\jhund\\Desktop\\software\\julian\\**)",
    "WebFetch(*)",
    "mcp__playwright__*",
    "mcp__filesystem__*",
    "mcp__sqlite__*",
    "mcp__github__*",
    "Task(*)"
  ],
  "contextWindow": 200000
}
